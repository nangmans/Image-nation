<div class="card">
    <h3 class="card-header">        
            Most Popular
    </h3>
    <div class="card-body">
        {{#each sidebar.popular}}
            <div class="col-md-4 text-center"
             style="padding-bottom: .5em;">
               <a href="/images/{{uniqueId}}"><img
                src="public/upload/{{filename}}"
                 style="width: 5px; height: 5px;"
                 class="img-thumbnail"></a>
            </div>
        {{/each}}
    </div>
</div>