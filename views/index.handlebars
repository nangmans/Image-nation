
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
      <div class="carousel-item active"><img src="../public/img/carousel-active.png"
        class="d-block w-100" style="width: 80em; height: 50em;"></div>
    {{#each images}}
        <div class="carousel-item"><a href="images/{{ uniqueId }}"><img
        src="/public/upload/{{ filename }}" alt="{{title}}"
        class="d-block w-100" style="width: 80em; height: 50em;"></a></div>
    {{/each}}
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</br></br></br>
<div class="card border-dark" id="upload">
    <h3 class="card-header">      
            Upload an Image      
    </h3>
    <div class="card-body">
      <form class="form" method="post" action="/images" enctype="multipart/form-data" id="form">
            <div class="form-group col-md-12">
             <label class="col-sm-2 control-label"
              for="file">Browse:</label>
                <div class="col-md-10">
                <input class="form-control" type="file"
                 name="file" id="file">
                </div>
            </div>
        <div class="form-group col-md-12">
            <label class="col-md-2 col-form-label"
             for="title">Title:</label>
             <div class="col-md-10">
                 <input class="form-control" type="text"
                  name="title" id="title">
             </div>
        </div>
        <div class="form-group col-md-12">
            <label class="col-md-2 col-form-label"
             for="description">Description:</label>
             <div class="col-md-10">
                 <textarea class="form-control"
                  name="description" rows="2" id="description"></textarea>
             </div>
        </div>
            <div class="form-group col-md-12">
                <div class="col-md-12 text-right">
                    <button type="submit" id="login-btn"
                     class="btn btn-success" type="button">
                    <i class="fas fa-upload"></i>
                    </i> Upload Image</button>
                </div>
            </div>
    </form>
    </div>
</div>
</br></br></br>
<div class="card" id="view">
    <h3 class="card-header">       
        Newest Images      
    </h3>
    <div class="card-body">
        <div class="row">
        {{#each images}}
           <div class="col-3 mb-3" style="padding-bottom: 1em;"><a href="images/{{ uniqueId }}">
           <img class= "img-fluid" src="/public/upload/{{ filename }}" alt="{{title}}">
           </a></div>
        {{/each}}
        </div>
    </div>
</div>

