<div class="card">
    <div class= "card-header">
    <h3 class="card-title">      
            Upload an Image      
    </h3>
      <form class="form" method="post" action="/images" enctype="multipart/form-data">       
            <div class="form-group col-md-12">
             <label class="col-sm-2 control-label"
              for="file">Browse:</label>
                <div class="col-md-10">
                <input class="form-control" type="file"
                 name="file" id="file">
                </div>
            </div>
        <div class="form-group col-md-12">
            <label class="col-md-2 col-form-label"
             for="title">Title:</label>
             <div class="col-md-10">
                 <input class="form-control" type="text"
                  name="title">
             </div>
        </div>
        <div class="form-group col-md-12">
            <label class="col-md-2 col-form-label"
             for="description">Description:</label>
             <div class="col-md-10">
                 <textarea class="form-control"
                  name="description" rows="2"></textarea>
             </div>
        </div>
            <div class="form-group col-md-12">
                <div class="col-md-12 text-right">
                    <button type="submit" id="login-btn"
                     class="btn btn-success" type="button">
                    <i class="fa fa-cloud-upload ">
                    </i> Upload Image</button>
                </div>
            </div>
        </div>
    </form>
</div>
<div class="card">
    <h3 class="card-header">       
        Newest Images      
    </h3>
    <div class="card-body">
        {{#each images}}
           <div class="col-md-4 text-center" style="padding-bottom:
           1em;"><a href="images/{{ uniqueId }}"><img
           src="/public/upload/{{ filename }}" alt="{{title}}"
           style="width: 11em; height: 11em;"
           class="img-thumbnail"></a></div>
        {{/each}}
    </div>
</div>