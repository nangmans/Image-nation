<div class="card">
    <h3 class="card-header">
        {{ image.title }}
    </h3>
    <div class="card-body">
        <p>{{ image.description }}</p>
        <div class="col-md-12 text-center">
            <img src="/public/upload/{{ image.filename }}"
             class="img-thumbnail">
        </div>
    </div>
    <div class="card-footer">
        <div class="row">
            <div class="col-md-8">
                <button class="btn btn-success" id="btn-like"
                 data-id="{{ image.uniqueId }}"><i class=
                 "fa fa-heart">   Like</i></button>
                 <strong class="likes-count"> {{ image.likes }}
                 </strong> &nbsp; - &nbsp; <i class="fa fa-eye">
                 </i> <strong>{{ image.views }}</strong>
                 &nbsp; - &nbsp; Posted: <em class="text-muted">{{
                 timeago image.timestamp }} </em>
            </div>
            <div class="col-md-4 text-right">
                <button class="btn btn-danger" id="btn-delete"
                 data-id="{{ image.uniqueId }}"><span>Delete</span>
                    <i class="fafa-times"></i> 
                </button>
            </div>
        </div>
    </div>
</div>
<div class="card">
    <div class="card-header">
        <dic class="row">
            <div class="col-md-8">
                <strong class="card-title">Comments</strong>
            </div>
            <div class="col-md-4 text-right">
                <button class="btn btn-primary btn-sm" id="btn-comment"
                 data-id="{{ image.uniqueId }}">
                 <i class="fa fa-comment-o"> Post
                 Comment...</i></button>
            </div>
        </dic>
    </div>
    <div class="card-body">
        <blockquote id="post-comment">
            <div class="row">
                <form method="post" action="/images/{{
                 image.uniqueId }}/comment">
                    <div class="form-group col-sm-12">
                        <label class="col-sm-4 col-form-label"
                         for="name">Name:</label>
                         <div class="col-sm-12">
                             <input class="form-control"
                              type="text" name="name">
                         </div>
                    </div>
                    <div class="form-group col-sm-12">
                        <label class="col-sm-4 col-control-label"
                         for="email">Email:</label>
                         <div class="col-sm-12">
                             <input class="form-control"
                              type="text" name="email">
                         </div>
                    </div>
                    <div class="form-group col-sm-12">
                        <label class="col-sm-6 col-control-label"
                         for="comment">Comment:</label>
                         <div class="col-sm-12">
                             <textarea class="form-control"
                              name="comment" row="2"></textarea>
                         </div>
                    </div>
                    <div class="form-group col-sm-12">
                        <div class="col-sm-12 text-right">
                            <button type="submit" id="comment-btn"
                             class="btn btn-success" type="button">
                             <i class="fa fa-comment"></i>
                             Post</button>
                        </div>
                    </div>
                </form>
            </div>
        </blockquote>
        <ul class="media-list">
            {{#each comments}}
            <li class="media">
                <a class="float-left" href="#">
                    <img class="media-object rounded-circle" class="mr-3"
                     src="https://www.gravatar.com/avatar/{{gravatar}}?d=retro&s=45"></a>
                <div class="media-body">
                    {{ comment }}<br>
                    <strong class="media-heading">{{ name
                     }}</strong> <small class="text-muted">{{
                         timeago timestamp }}</small>   
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</div>